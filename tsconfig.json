{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "sourceMap": true,
    "outDir": "dist",
    "disableSizeLimit": true,
    "removeComments": false,
    "types": [
      "node"
    ],
    "lib": [
      "es6"
    ]
  },
  "include": [
    "./lib/**/*.ts",
    "./lib/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "./lib/**/*.spec.ts"
  ]
}